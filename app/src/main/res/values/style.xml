<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title_page">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="card_data_left">
        <item name="android:textColor">@color/card_text_color</item>
        <item name="android:fontFamily">@font/corbel</item>
        <item name="android:layout_width">221dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>
    <style name="card_data_right">
        <item name="android:textColor">@color/card_text_color</item>
        <item name="android:fontFamily">@font/corbel</item>
        <item name="android:layout_width">138dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:gravity">end</item>
    </style>
    <style name="panel_form">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/firasans_regular</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="form_line_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/firasans_regular</item>
        <item name="android:textColor">@color/form_card_info_color</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="form_line_data">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">14dp</item>
        <item name="android:fontFamily">@font/corbel</item>
        <item name="android:textColor">@color/form_card_info_color</item>
        <item name="android:background">@drawable/border_radius</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="button_save">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/candara</item>
        <item name="android:textColor">@color/card_text_second_color</item>
        <item name="android:background">@drawable/button_save</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>